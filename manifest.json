{
  "manifest_version": 3,
  "name": "SafePrompt",
  "version": "1.0",
  "description": "Prevent sensitive data from being sent to AI models.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://chat.openai.com/*", "https://claude.ai/*", "https://gemini.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources":[
    {
      "resources": ["src/detector.js"],
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://chatgpt.com/*"
        ]
      }
    ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["src/content.js", "src/detector.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": "icons/safeprompt_logo.png"
  }
}
