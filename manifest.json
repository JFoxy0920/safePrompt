{
  "manifest_version": 3,
  "name": "SafePrompt",
  "version": "1.0",
  "description": "Prevent sensitive data from being sent to AI models.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://chat.openai.com/*", "https://claude.ai/*", "https://gemini.google.com/*", "https://chatgpt.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources":[
    {
      "resources": ["src/detector.js"],
      "matches": ["<all_urls>"]
      }
    ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "icons": {
  "16": "icons/icon-16.png",
  "32": "icons/icon-32.png",
  "48": "icons/icon-48.png",
  "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": "icons/safeprompt_logo.png"
  }
}
